<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redireciona externamente de /index.php para a raiz sem barra
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /index\.php\?page=([^\s&]+) [NC]
    RewriteRule ^index\.php$ /?page=%1 [R=302,L,NE]

    # Redireciona para remover a barra, se presente, antes do ?
    RewriteCond %{REQUEST_URI} ^/($|\?)
    RewriteRule ^/?(.*) $1 [R=302,L,NE]

    # Internamente redireciona para /index.php quando a query 'page' est√° presente
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{QUERY_STRING} ^page=([^\s&]+) [NC]
    RewriteRule ^$ index.php [L,NC]
</IfModule>

<filesMatch "\.(css|jpg|jpeg|png|gif|js|ico)$">
    Header set Cache-Control "max-age=31536000, public"
</filesMatch>
